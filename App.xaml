<Application x:Class="SubsonicUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SubsonicUWP">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="WindowBackgroundColor">#F3F3F3</Color>
                    <Color x:Key="ControlBackgroundColor">#DDDDDD</Color>
                    <Color x:Key="NavRailBackgroundColor">#E6E6E6</Color>
                    <Color x:Key="PlayerBarBackgroundColor">#FFFFFF</Color>
                    <Color x:Key="AccentColor">#0078D7</Color>
                    <Color x:Key="ForegroundColor">#000000</Color>
                    <Color x:Key="SecondaryForegroundColor">#666666</Color>

                    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
                    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
                    <SolidColorBrush x:Key="NavRailBackgroundBrush" Color="{StaticResource NavRailBackgroundColor}"/>
                    <SolidColorBrush x:Key="PlayerBarBackgroundBrush" Color="{StaticResource PlayerBarBackgroundColor}"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
                    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
                    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="WindowBackgroundColor">#121212</Color>
                    <Color x:Key="ControlBackgroundColor">#1F1F1F</Color>
                    <Color x:Key="NavRailBackgroundColor">#121212</Color>
                    <Color x:Key="PlayerBarBackgroundColor">#171717</Color>
                    <Color x:Key="AccentColor">#0078D7</Color>
                    <Color x:Key="ForegroundColor">#FFFFFF</Color>
                    <Color x:Key="SecondaryForegroundColor">#AAAAAA</Color>

                    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
                    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
                    <SolidColorBrush x:Key="NavRailBackgroundBrush" Color="{StaticResource NavRailBackgroundColor}"/>
                    <SolidColorBrush x:Key="PlayerBarBackgroundBrush" Color="{StaticResource PlayerBarBackgroundColor}"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
                    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
                    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!-- Default Styles using these brushes -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{ThemeResource ForegroundBrush}"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <!-- Converters -->
            <local:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
            <local:SliderTooltipConverter x:Key="SliderTooltipConverter"/>
            <local:VolumeTooltipConverter x:Key="VolumeTooltipConverter"/>
            <local:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <local:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>
