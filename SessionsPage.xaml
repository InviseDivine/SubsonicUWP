<Page x:Class="SubsonicUWP.SessionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SubsonicUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="24,12,0,24">
            <TextBlock Text="Saved Queues" FontSize="32" FontWeight="Light" FontFamily="Segoe UI Light"/>
            <TextBlock Text="Manage your listening sessions" Opacity="0.6" Margin="0,4,0,0"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Sessions}" Background="Transparent" BorderThickness="0" IsItemClickEnabled="False" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="12,8" Background="Transparent" Tapped="Session_Tapped">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="64"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon Placeholder -->
                        <Grid Background="#2A2A2A" Width="64" Height="64">
                            <TextBlock Text="&#xE14C;" FontFamily="Segoe MDL2 Assets" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                        </Grid>

                        <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Opacity="0.6" Margin="0,4,0,0">
                                <TextBlock Text="{Binding TrackCount}"/>
                                <TextBlock Text=" songs â€¢ "/>
                                <TextBlock Text="{Binding CreatedFormatted}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                            <!-- Delete Button -->
                            <Button FontFamily="Segoe MDL2 Assets" FontSize="16" Opacity="0.5" Margin="0,0,12,0" Background="Transparent" BorderThickness="0" Click="Delete_Click" Tapped="Button_SwallowTap">
                                <TextBlock Text="&#xE107;"/>
                            </Button>

                            <!-- Resume Button (Play Icon) -->
                            <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Opacity="0.5" Background="Transparent" BorderThickness="0" Click="Resume_Click" Tapped="Button_SwallowTap">
                                <TextBlock Text="&#xE102;"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
